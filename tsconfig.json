{
  "compilerOptions": {
    "target": "es2016",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["server/*"]
    },
    "jsx": "preserve",
    "module": "commonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true
  },
  "include": ["./src", "./server"]
}
